<h1>Available Channels</h1>
<aside class="col-xs-12 col-md-6 col-lg-3">
  <ol class="list-group">
    <% @channels.each do |channel| %>
      <li class="list-group-item">

        
        <%= link_to channel.title, channel %>
        <% #link_to 'Edit', edit_channel_path(channel) %>
        <% #link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>

  </ol>
</aside>
<% if current_user != nil %>
  <article class="col-xs-12 col-md-12 col-lg-12">
    <a href="#" class="btn btn-primary new_channel_slide_button">New Channel</a>
    <section class="channel_form_slide">
        <%= render 'form' %>
<% else %>
    <div class="col-xs-12 col-md-12 col-lg-12">
      <a class="btn btn-primary channnel_slide_down_not_loggedIn" href="">Add Channel</a>
      <p class="channel_not_logged_in_msg alert alert-danger bs-alert-old-docs">You need to be logged in to add channel. <%= link_to 'Sign up here.', new_user_registration_path %></p>
    </div>
    </section>
  </article>
<% end %>


  